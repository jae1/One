@model IEnumerable<One.Models.Coffee>

@{
    ViewData["Title"] = "Shop";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="container">

    <div class="pricing-header px-3 py-3 pt-md-5 pb-md-4 mx-auto text-center">
        <h1>Shop</h1>
    </div>


    <div class="row row-cols-1 row-cols-md-2">
        <div class="card-deck mb-3 text-center">
            @foreach (var item in Model)
            {
            <div class="card mb-4">
                <a class="product-link" asp-action="Details" asp-route-id="@item.Id"></a>
                <img src="~/img/@Html.DisplayFor(modelItem => item.Img)" class="card-img-top" alt="@Html.DisplayFor(modelItem => item.Name)">
                <div class="card-body coffee">
                    <h5 class="card-title">@Html.DisplayFor(modelItem => item.Name)</h5>
                    <h6 class="card-title">@Html.DisplayFor(modelItem => item.Price)</h6>
                </div>
            </div>
            }
        </div>
    </div>
    <p>
        <a asp-action="Create">Create New</a>
    </p>


</div>